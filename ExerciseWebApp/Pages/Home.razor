@page "/"
@inject IJSRuntime JSRuntime


<h1>Blazor Webcam</h1>
<video id="videoElement" width="320" height="240" />
<canvas class="d-none" id="currentFrame" width="320" height="240" />
<br />
<MudButton @onclick="StartVideo" Variant="Variant.Filled" Color="Color.Primary">Başlat</MudButton>
<MudButton @onclick="StopVideo" Variant="Variant.Filled" Color="Color.Secondary">Bitir</MudButton>


@code {

    private async Task StartVideo()
    {
        await JSRuntime.InvokeVoidAsync("startVideo", "videoElement");
    }

    private async Task StopVideo()
    {
        await JSRuntime.InvokeVoidAsync("stopVideo", "videoElement");
    }
}