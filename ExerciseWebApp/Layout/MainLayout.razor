@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="true" Theme="_theme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudMainContent Class="mt-n12">
        <MudContainer MaxWidth="MaxWidth.Medium">
            @Body
        </MudContainer>
    </MudMainContent>
    <MudAppBar Bottom="true">
        <MudSpacer />
        <MudStack Row="true">
            <MudIconButton Icon="@Icons.Material.Filled.History" Class="grey-text text-lighten-2" Href="/workout-history" />
            <MudSpacer />
            <MudIconButton Icon="@Icons.Material.Filled.Home" Class="grey-text text-lighten-2" Href="/" />
            <MudSpacer />
            <MudIconButton Icon="@Icons.Material.Filled.Settings" Class="grey-text text-lighten-2" />
        </MudStack>
        <MudSpacer />
    </MudAppBar>
</MudLayout>

@code {
    private MudTheme _theme = new();

}